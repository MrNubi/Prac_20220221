<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DitailPizzaActivity">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_changable_image"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/mung"
            android:layout_width="100dp"
            android:layout_height="100dp"></de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 이름"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/text_changable_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피자집 이름"
            android:textSize="30dp"></TextView>


    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점"
            android:textSize="30dp"></TextView>
        <RatingBar

            android:id="@+id/rating_changable_starPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:rating="5"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar"/>



    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_changable_phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phoneNum"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp"></TextView>
        <Button
            android:id="@+id/btn_changable_callBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문"></Button>
    </LinearLayout>
</LinearLayout>